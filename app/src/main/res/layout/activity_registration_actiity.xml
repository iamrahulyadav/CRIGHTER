<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shoaibnwar.crighter.Activities.RegistrationActiity"
    android:background="@drawable/bgimage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="145dp"
                    android:layout_height="145dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/logo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorRed"
                    android:text="Registration"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/shaded_background"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/shaded_background"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">
                        <EditText
                            android:id="@+id/et_user_fullname"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/colorBlack"
                            android:textColorHint="@color/colorHind"
                            android:hint="Your Full Name"
                            android:paddingLeft="10dp"
                            android:inputType="text"
                            android:background="@null" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shaded_background"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">
                        <EditText
                            android:id="@+id/et_user_email"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:textColor="@color/colorBlack"
                            android:textColorHint="@color/colorHind"
                            android:hint="Your Email"
                            android:paddingLeft="10dp"
                            android:inputType="textEmailAddress"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shaded_background"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">
                        <EditText
                            android:id="@+id/et_user_phone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:textColor="@color/colorBlack"
                            android:textColorHint="@color/colorHind"
                            android:hint="Your Phone"
                            android:paddingLeft="10dp"
                            android:inputType="phone"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shaded_background"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">
                        <EditText
                            android:id="@+id/et_user_password"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:textColor="@color/colorBlack"
                            android:textColorHint="@color/colorHind"
                            android:hint="Password"
                            android:paddingLeft="10dp"
                            android:inputType="textPassword"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shaded_background"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">
                        <EditText
                            android:id="@+id/et_user_password_again"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:textColor="@color/colorBlack"
                            android:textColorHint="@color/colorHind"
                            android:hint="Enter Password Again"
                            android:paddingLeft="10dp"
                            android:inputType="textPassword"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your Gender"/>
                        <RadioGroup
                            android:id="@+id/user_rg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Male"
                                android:layout_weight="1"/>
                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Female"
                                android:layout_weight="1"/>
                        </RadioGroup>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shaded_background"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">
                        <EditText
                            android:id="@+id/et_auth_fullname"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:textColor="@color/colorBlack"
                            android:textColorHint="@color/colorHind"
                            android:hint="Authroity Full Name"
                            android:paddingLeft="10dp"
                            android:inputType="text"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shaded_background"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">
                        <EditText
                            android:id="@+id/et_auth_email"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:textColor="@color/colorBlack"
                            android:textColorHint="@color/colorHind"
                            android:hint="Authroity Email"
                            android:paddingLeft="10dp"
                            android:inputType="textEmailAddress"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shaded_background"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">
                        <EditText
                            android:id="@+id/et_auth_phone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:textColor="@color/colorBlack"
                            android:textColorHint="@color/colorHind"
                            android:hint="Authroity Phone"
                            android:paddingLeft="10dp"
                            android:inputType="phone"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Authority Gender"/>
                        <RadioGroup
                            android:id="@+id/rg_auth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Male"
                                android:layout_weight="1"/>
                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Female"
                                android:layout_weight="1"/>
                        </RadioGroup>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shaded_background"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">
                        <Spinner
                            android:id="@+id/sp_relation"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/colorBlack"
                            android:paddingLeft="10dp"
                            android:entries="@array/select_relation"
                            android:inputType="text"/>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_back_to_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Back to Login"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/colorBlack"/>

                    <Button
                        android:id="@+id/bt_register"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorWhite"
                        android:text="Register"
                        android:textAllCaps="false"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/button_background"/>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
